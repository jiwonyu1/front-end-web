       <script>
       

            var x = document.getElementById("myBtn");
            var c = document.getElementById("myBtn1");
            x.addEventListener("mouseover", myFunction);
            c.addEventListener("click", mySecondFunction);
            x.addEventListener("mouseout", myThirdFunction);
            
            function myFunction() {
                document.getElementById("demo2").innerHTML += "jiwon is not okay!<br>";
              }
              
              function mySecondFunction() {
                document.getElementById("demo3").innerHTML += "jiwon hates hugs!<br>";
              }
              
              function myThirdFunction() {
                document.getElementById("demo4").innerHTML += "jiwon is sad!<br>";
              }

            </script>

